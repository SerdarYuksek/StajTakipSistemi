@model EntityLayer.Concrate.Student
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Şifre Sıfırlama</title>
    <style>
        .center-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
</head>
<body style="background-color:#96c6e1">
    <div class="center-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Şifre Sıfırlama</h5>
                            <!--Şifre Sıfırlama Formu-->
                            @using (Html.BeginForm("StudentPasswordReset", "Account", FormMethod.Post))
                            {

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.TCNO, new { placeholder = "TC Kimlik No",type="text", name="tcno",@class = "form-control"})
                                    @Html.ValidationMessageFor(x => x.TCNO )
                                </div>

                                <div class="form-group mt-4">
                                    @Html.TextBoxFor(x => x.Password, new { placeholder = "Şifre" ,type="password", name="sifre", @class = "form-control"  })
                                    @Html.ValidationMessageFor(x => x.Password )
                                </div>

                                <div class="form-group mt-4">
                                    @Html.TextBoxFor(x => x.RePassword, new { placeholder = "Şifre Tekrar" ,type="password", name="sifretekrar", @class = "form-control"  })
                                    @Html.ValidationMessageFor(x => x.RePassword )
                                </div>

                                <div class="d-flex justify-content-end mt-4">
                                    <div class="col-md-4 d-flex justify-content-end mx-2">
                                        <a href="@Url.Action("Main", "Home")" class="btn btn-danger btn-lg rounded-circle">
                                            <i class="fas fa-arrow-right fa-flip-horizontal"></i>
                                        </a>
                                    </div>

                                    <button class="btn btn-primary btn-lg btn-md" type="submit">Sıfırla</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
