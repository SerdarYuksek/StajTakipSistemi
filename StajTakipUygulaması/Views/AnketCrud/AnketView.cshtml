@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<EntityLayer.Concrate.Anket>

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Anket Sayfası</title>
</head>

<body style="background-color:#92afb0">
    <div class="container">
        <h1 class="text-center">Anket</h1>
        <p class="text-center fw-bold fs-10 my-3">Aşağıdaki Soruları 1-5 arasında değerlendiriniz.(1=Düşük, 5=Yüksek)</p>
        <form method="post" asp-action="AnketView" asp-controller="AnketCrud">
           @foreach (var item in Model)
              {  
            <div class="card mb-3" style="width: 30rem; margin: 0 auto;">
                <div class="card-body">
                    <label class="form-label">@item.AnketID -) @item.soru</label>
                    <div class="d-flex mt-3 justify-content-start">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="" id="answer1" value="1" >
                            <label class="form-check-label" for="answer1">1</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="cevap" id="answer2" value="2" >
                            <label class="form-check-label" for="answer2">2</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="cevap" id="answer3" value="3" >
                            <label class="form-check-label" for="answer3">3</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="cavap" id="answer4" value="4" >
                            <label class="form-check-label" for="answer4">4</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="cevap" id="answer5" value="5" >
                            <label class="form-check-label" for="answer5">5</label>
                        </div>
                    </div>
                </div>
            </div>

            }
            <div class="d-md-flex d-grid gap-2 justify-content-center ">
                <input type="submit" value="Cevapla" class="btn btn-info btn-lg mr-1 justify-content-md-" name="submit" id="submit" />
                <a asp-action="StudentMain" asp-controller="Student" class="btn btn-danger btn-lg">Çıkış</a>
            </div>
        </form>
    </div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("PersonalList", new { page }))

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
