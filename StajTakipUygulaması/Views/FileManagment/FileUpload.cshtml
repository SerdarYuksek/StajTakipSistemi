@model EntityLayer.Concrate.Dosya
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Dosya İşlemleri</title>
</head>
<body style="background-color:#cfcbb8">

    <div class="container ">
    <div class="row">
    <div class="col-md-6">
         <!--Dosya Yükleme ve görüntüleme Formu-->
                @using (Html.BeginForm("FileUpload", "FileManagment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <h1 class="mt-4">Bilgilendirme Dökümanları</h1>

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Staj Akış Şeması</h5>
                                    <input type="file" name="Akissemasi" class="form-control mb-3">
                                <div class="d-flex justify-content-end">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Staj Değerlendime Dökümanı</h5>
                                        <input type="file" name="degerledirmedok" class="form-control mb-3">
                                <div class="d-flex justify-content-end">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Staj Yönerge Dökümanı</h5>
                                    <input type="file" name="yonerge" class="form-control mb-3">
                                <div class="d-flex justify-content-end">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                }
    </div>


    <div class=" col-md-6 ">
        <h1 class="mt-4">Form ve Şablonlar</h1>

                @using (Html.BeginForm("FileUpload", "FileManagment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Staj Başvuru Formu</h5>
                                    <input type="file" name="basvuru" class="form-control mb-3">
                            <div class="d-flex justify-content-end">
                                        <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                        <input type="submit" value="Görüntüle"  class="btn btn-outline-info" name="submit" id="submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Staj Devam Formu</h5>
                                    <input type="file" name="devam" class="form-control mb-3">
                            <div class="d-flex justify-content-end">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Staj Değerlendirme Formu</h5>
                                        <input type="file" name="degerlendirmeform" class="form-control mb-3">
                            <div class="d-flex justify-content-end ">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

         <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Staj Rapor Şablonu</h5>
                                    <input type="file" name="raporsablon" class="form-control mb-3">
                            <div class="d-flex justify-content-end">
                                            <input type="submit" value="Yükle" class="btn btn-outline-success mx-2" name="submit" id="submit" />
                                            <input type="submit" value="Görüntüle" class="btn btn-outline-info" name="submit" id="submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>
    <div >
        <a asp-action="PersonalMain" asp-controller="Personal" class="btn btn-danger">Ana Sayfaya Dön</a>
    </div>
  </div>
 </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
