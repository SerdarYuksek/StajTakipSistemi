@model EntityLayer.Concrate.StajBilgi
<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/İnternTemp/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/İnternTemp/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/İnternTemp/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/İnternTemp/css/style.css">

    <title>Staj Başvuru Sayfası</title>
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style=" background-image: url('/image/internn.jpg'); "></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <div class="my-3 text-center">
                            <h3>Staj Başvuru Formu</h3>
                        </div>

                       @using (Html.BeginForm("CreateIntern", "StajCrud", FormMethod.Post))
					  {     
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.AdUnvan, new { placeholder = "Firma Adı/Ünvanı",type="text", name="Adunvan", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.AdUnvan )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Adres, new { placeholder = "Firma Adresi",type="text", name="Adres", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.Adres )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Alanı, new { placeholder = "Firma Hizmet Alanı",type="text", name="Alanı", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.Alanı )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.YetkiliAd, new { placeholder = "Firma Yetkili Adı-Soyadı",type="text", name="Yetkiliad", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.YetkiliAd )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.TelNo, new { placeholder = "Firma Telefon No",type="text", name="Telno", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.TelNo )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Mail, new { placeholder = "Firma E-Posta",type="email", name="mail", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.Mail )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.FaksNo, new { placeholder = "Firma Faks No",type="text", name="faksno", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.FaksNo )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WebSite, new { placeholder = "Firma Web Adresi",type="text", name="webadersi", @class="form-control" })
                                @Html.ValidationMessageFor(x => x.WebSite )
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Başlamatrh, new { @class = "form-control", type = "date", name="bastarih" })
                            </div>
                            <div class="form-group last">
                                @Html.TextBoxFor(x => x.Bitistrh, new { @class = "form-control", type = "date", name="bittarih" })
                            </div>

                            <div class="form-radio my-4">
                                <label for="StajTürü" class="radio-label me-3">Kaçıncı Stajınız Seçiniz :</label>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.stajsayi, "1", new { id = "1.Staj" })
                                    <label for="1.Staj">1.Staj</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.stajsayi, "2", new { id = "2.Staj" })
                                    <label for="2.Staj">2.Staj</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline">
                                    @Html.RadioButtonFor(x => x.stajsayi, "3", new { id = "is-yeri-egitimi" })
                                    <label for="is-yeri-egitimi">İş Yeri Eğitimi</label>
                                    <span class="check"></span>
                                </div>

                                @Html.ValidationMessageFor(x => x.stajsayi)
                            </div>

                            <div class="form-radio my-4">
                                <label for="StajTürü" class="radio-label me-3">Staj Türü Seçiniz :</label>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.StajTürü, "Donanım", new { id = "Donanım" })
                                    <label for="Donanım">Donanım</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.StajTürü, "Yazılım", new { id = "Yazılım" })
                                    <label for="Yazılım">Yazılım</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline">
                                    @Html.RadioButtonFor(x => x.StajTürü, "İş yeri eğitimi", new { id = "İs-yeri-egitimi" })
                                    <label for="İs-yeri-egitimi">İş Yeri Eğitimi</label>
                                    <span class="check"></span>
                                </div>

                                @Html.ValidationMessageFor(x => x.StajTürü)
                            </div>

                            <div class="form-radio my-4">
                                <label for="resmiTatil" class="radio-label me-3">Resmi Tatil Dahil mi? : </label>

                                <div class="form-radio-item d-inline mx-3 ">
                                    @Html.RadioButtonFor(x => x.ResmiTatil, true, new { id = "resmiTatilDahil" })
                                    <label for="resmiTatilDahil">Resmi Tatil Dahil</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.ResmiTatil, false, new { id = "resmiTatilHariç"})
                                    <label for="resmiTatilHariç">Resmi Tatil Hariç</label>
                                    <span class="check"></span>
                                </div>

                                @Html.ValidationMessageFor(x => x.ResmiTatil)
                            </div>

                            <div class="form-radio my-4">
                                <label for="cumartesi" class="radio-label me-3">Cumartesi Dahil mi? : </label>

                                <div class="form-radio-item d-inline mx-3 ">
                                    @Html.RadioButtonFor(x => x.CmtDahil, true, new { id = "cumartesiDahil"})
                                    <label for="cumartesiDahil">Cumartesi Dahil</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.CmtDahil, false, new { id = "cumartesiHariç" })
                                    <label for="cumartesiHariç">Cumartesi Hariç</label>
                                    <span class="check"></span>
                                </div>

                                @Html.ValidationMessageFor(x => x.CmtDahil)
                            </div>

                            <div class="form-radio my-4">
                                <label for="egitim" class="radio-label me-3">İş sağlığı eğitimi aldınız mı? :</label>

                                <div class="form-radio-item d-inline mx-3  ">
                                    @Html.RadioButtonFor(x => x.Egitim, true, new { id = "egitimAldi"  })
                                    <label for="egitimAldi">Evet</label>
                                    <span class="check"></span>
                                </div>

                                <div class="form-radio-item d-inline mx-3">
                                    @Html.RadioButtonFor(x => x.Egitim, false, new { id = "egitimAlmadi" })
                                    <label for="egitimAlmadi">Hayır</label>
                                    <span class="check"></span>
                                </div>

                                @Html.ValidationMessageFor(x => x.Egitim)
                            </div>

                            <div class="d-md-flex d-grid gap-2 justify-content-md-center mt-5">
                                <input type="submit" value="Başvuru Yap" class="btn btn-block btn-success my-3">
                                <input type="submit" asp-action="StudentMain" value="Ana Sayfaya Dön" asp-controller="Student" class="btn btn-danger btn-block mx-2 my-3">
                            </div>
                      }
                    </div>
                </div>
            </div>
        </div>


    </div>



    <script src="~/İnternTemp/js/jquery-3.3.1.min.js"></script>
    <script src="~/İnternTemp/js/popper.min.js"></script>
    <script src="~/İnternTemp/js/bootstrap.min.js"></script>
    <script src="~/İnternTemp/js/main.js"></script>
</body>
</html>