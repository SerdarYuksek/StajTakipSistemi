@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<EntityLayer.Concrate.Student>


<html lang="tr">
<head>
    <title>Öğrenci Görüntüleme Sayfası</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha512-BAhBUU3hMwJcVY7v6MjLgNmB/UJhITh+Gx6wyjO8lNt2CJ1+G6IdGdXUdy5n4oUsneDR0YqKe3f1i9v9me86Kg==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="~/css/list.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
</head>
<body>
    <div class="container mt-3 mb-4">
        <div class="col-lg-9 mt-4 mt-lg-0">
            <!-- Öğrenci Sınıf Bilgisine Göre Filtreleme -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light ">
                <div class="container">
                    <a class="navbar-brand" >
                        <form asp-action="StudentList" asp-controller="UsersCrud" method="get">
                            <div class="form-group">
                                <label for="className">Sınıf Seçiniz:</label>
                                <select class="form-control" id="className" name="className">
                                    <option value="">Tümü</option>
                                    <option value="1.sınıf">1.sınıf</option>
                                    <option value="2.sınıf">2.sınıf</option>
                                    <option value="3.sınıf">3.sınıf</option>
                                    <option value="4.sınıf">4.sınıf</option>
                                    <option value="YüksekLisans">Yüksek Lisans</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Listele</button>
                        </form>
                    </a>
                </div>

                <div class="container">
                    <a class="navbar-brand">
                        <form asp-action="StudentList" asp-controller="UsersCrud" method="get">
                            <div class="form-group">
                                <label for="studentStatus">Başvuru Aşamasını Seçiniz:</label>
                                <select class="form-control" id="studentStatus" name="studentStatus">
                                    <option value="">Tümü</option>
                                    <option value="onay">Yeni Başvuru</option>
                                    <option value="kabul">Kabul Bekleyen</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Listele</button>
                        </form>
                    </a>
                </div>
            </nav>

            <div class="row">
                <div class="col-md-12">
                    <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                        <!-- Öğrenci Listeleme Tablosu -->
                        <table class="table manage-candidates-top mb-0">

                            <thead>
                                <tr>
                                    <th>Öğrenci Bilgi</th>
                                    <th class="text-center">Staj Durum</th>
                                    <th class="action text-right">Araçlar</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr class="candidates-list">
                                        <td class="title">
                                            <div class="thumb">
                                                <img class="img-fluid" src="/StudentImageFile/@item.Image" alt="">
                                            </div>
                                            <div class="candidate-list-details">
                                                <div class="candidate-list-info">
                                                    <div class="candidate-list-title">
                                                        <h5 class="mb-0">@item.AdSoyad</h5>
                                                    </div>
                                                    <div class="candidate-list-option">
                                                        <ul class="list-unstyled">
                                                            <li><i class="fas fa-university pr-1"></i>@item.OgrenciNo</li>
                                                            <li><i class="fas fa-envelope pr-1"></i>@item.Mail</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="candidate-list-favourite-time text-center">
                                            
                                            <div class="progress ">
                                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="20" style="width:70%"> 70% </div>
                                            </div>

                                            <div class="progress my-3">
                                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="20" style="width:40%"> 40% </div>
                                            </div>

                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="20" style="width:90%"> 90% </div>
                                            </div>

                                        </td>

                                        <td>
                                            <ul class="list-unstyled mb-0 d-flex justify-content-end">

                                                @Html.Raw("<li>")
                                                <a href="/StajCrud/ListStudentIntern/@item.KullaniciID" data-toggle="tooltip" data-original-title="go">
                                                    <i class="fas fa-list" style="color: #44b9f3;"></i>
                                                </a>
                                                @Html.Raw("</li>")

                                                @Html.Raw("<li>")
                                                <a href="/UsersCrud/StudentUpdate/@item.KullaniciID" class='text-info' data-toggle='tooltip' data-original-title='Edit' onclick="return confirm ('Düzenlemek istediğinize emin misiniz?')">
                                                    <i class='fas fa-pencil-alt'></i>
                                                </a>
                                                @Html.Raw("</li>")

                                                @Html.Raw("<li>")
                                                <a href='@Url.Action("PersonalDel", new { item.KullaniciID })' class='text-danger' data-toggle='tooltip' data-original-title='Delete' onclick="return confirm ('Silmek istediğinize emin misiniz?')">
                                                    <i class='far fa-trash-alt'></i>
                                                </a>
                                                @Html.Raw("</li>")
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <div class="text-center mt-3 mt-sm-3 ">
                            <!-- Sayfalama kodu -->
                            <ul class="pagination justify-content-center mb-0">
                                @Html.PagedListPager((IPagedList)Model, page => Url.Action("StudentList", new { page }))
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha512-rA/KkevB6sdV1QovhN2eeXuJFiJ3+UZU99oE0F0yvIfI5GlfQjZJnIqoBO2eS6qqnbwKQZy5/n7T8whBLWkUHw==" crossorigin="anonymous"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>

</html>

